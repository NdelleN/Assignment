#2. Circle Area Calculator

import math

# Prompt user for radius input
radius = float(input("Enter the radius of the circle: "))

# Calculate the area using the formula: area = Ï€ * radius^2
area = math.pi * radius ** 2

# Print the result
print(f"The area of the circle with radius {radius} is: {area:.2f}")


#3. Number Expansion Calculator

n = int(input("Enter an integer n: "))

# Calculate n + nn + nnn
result = n + int(str(n)*2) + int(str(n)*3)

# Print the result
print(f"The result of n + nn + nnn is: {result}")


#Second Activity

# Create a list of numbers
numbers_list = [1, 2, 3, 4, 5]

# Convert the list to a tuple
numbers_tuple = tuple(numbers_list)

# Print the original list and the tuple
print("Original list:", numbers_list)
print("Converted tuple:", numbers_tuple)

# Convert float to integer
float_value = 3.14
int_value = int(float_value)
print(f"The integer value of {float_value} is {int_value}")

# Convert string to float
string_value = "45.67"
float_from_string = float(string_value)
print(f"The float value of '{string_value}' is {float_from_string}")

# Get the current year
import datetime
current_year = datetime.datetime.now().year

# Take the user's age as input (as a string)
age_str = input("Enter your age: ")

# Convert the age to an integer
age = int(age_str)

# Calculate the year the user was born
birth_year = current_year - age

# Print the year the user was born
print(f"You were born in the year {birth_year}.")


#HomeWork

# Task 1: Count the number of vowels in a sentence
sentence = input("Enter a sentence: ")

# Define the vowels
vowels = "aeiouAEIOU"

# Count the number of vowels in the sentence
vowel_count = sum(1 for char in sentence if char in vowels)

# Print the result
print(f"The number of vowels in the sentence is: {vowel_count}")

# Task 2: Check if a number is positive, negative, or zero
number = float(input("Enter a number: "))

# Check the number using comparison operators
if number > 0:
    print("The number is positive.")
elif number < 0:
    print("The number is negative.")
else:
    print("The number is zero.")
